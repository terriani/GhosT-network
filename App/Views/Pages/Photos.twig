<div class="loading">
  <img src="{{ assets }}img/load.gif" alt="">
</div>
<div id='Photos'>
        {% include "Pages/Navbar.twig" %}
    <br><br>
        <div class='container'>
        {# View gerada automaticamente via Scooby_CLI 03-12-19 - 14:31:pm #}
	{% if msg %}
    	    {{ msg|raw }}
        {% endif %}
        {% for post in posts %}
           <div class="card z-depth-5">
             <div class="card-image">
               <img src="{{ post.img }}">
              
               <a onclick="
               
               axios({
                method: 'get',
                url: '{{ base_url }}like/{{ post.id }}',
              })
                .then(function (response) {
                   $('#likes').html(response.data)
                });
               
               " class="btn-floating btn-large halfway-fab waves-effect waves-light red z-depth-5"><i class="material-icons">favorite</i></a>
              </div>
              {% if post.likes >= 0 %}
              <div class="likes">
                <span><i class="material-icons left">favorite</i><span id="likes">{{ post.likes }}</span></span>
              </div>
              {% endif %}
              <br><br>
             <div class="card-content">
               <span class="card-title">{{ post.title }}</span>
               <p>{{ post.text }}</p>
               <br>
               <p class="left grey-text">{{ post.created_at|date('d-m-Y - h:i:a') }}</p>
             </div>
             <div class="card-action">
               <h6>Comente algo...</h6>
                <form action="{{ base_url }}comment" method="post" id="formComment">
                    <input type="hidden" name="csrfToken" value="{{ csrfToken }}" id="csrfToken">
                    <input type="hidden" name="post_id" value="{{ post.id }}" id="post_id">
                    <div class="row">
                        <div class="input-field col s12">
                          <textarea id="textarea1" class="materialize-textarea" name="comment" id="comment"></textarea>
                          <label for="textarea1">Diga algo...</label>
                        </div>
                      </div>
                    <button class="btn waves-effect waves-light" type="submit" name="action">Comentar
                      <i class="material-icons right">send</i>
                    </button>
                  </form>
                  
                  <br><br>
                  <div class="comment-link">
                    <a onclick="$('.comment{{ post.id }}').toggle('slow')">ver Coment√°rios <i class="material-icons left">add</i></a>
                  </div>
             </div>
             {% for comment in comments %}
             {% if post.id == comment.post_id %}
             <div class="card-action comment comment{{ post.id }}">
                <p><i class="material-icons left grey-text">comment</i><cite>{{ comment.comment }}</cite></p>
                <p class="grey-text">{{ comment.created_at|date('d-m-Y - h:i:a') }}</p>
              </div>
             {% endif %}
             {% endfor %}
            </div>
           <br>
           {% else %}
           <h3 class="center grey-text">Ops... O feed ainda esta vazio :(</h3>
        {% endfor %}
        <div class="center">{{ pagination|raw }}</div>
        <br><br>
    </div>
</div>
